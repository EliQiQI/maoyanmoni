<div>
    <h1>
        猫眼电影
    </h1>
    <header>
        <img src="./img/logo.png" alt="">

        <div class="app-name-desc">
            <div class="app-name">猫眼</div>
            <div class="app-desc">在线选座，热门影讯，爱上看电影</div>
        </div>

        <div class="btn-open-app">立即打开</div>
    </header>
    <section class="topbar">
        <div class="city">
            <span>北京</span>
            <i></i>
        </div>
        <div class="switch-hot" data-active=".n-hot">
            <div class="hot-item active" data-tab=".n-hot">正在热映</div>
            <div class="hot-item " data-tab=".f-hot">即将上映</div>
        </div>
        <svg class="icon" aria-hidden="true">
            <use xlink:href="#icon-sousuo"></use>
        </svg>
    </section>
    <section class="page-wrap">
        <section class="page">
            <div class="top-rated">
                <p class="title">最受好评电影</p>
                <div class="top-rated-list">
                    <% for(let i=0;i<data.length;i++){%>
                    <div class="top-rated-item">
                        <a href="#">
                            <div class="poster default-img-bg">
                                <img src="https://p1.meituan.net/170.230/movie/${data[i].img.split('/').pop()}"
                                    onerror="this.style.visibility='hidden'">
                                <span class="wish-bg"></span>
                                <span class="score">观众评分&nbsp;&nbsp;<span class="rated-score"><%= data[i].sc %> </span></span>
                            </div>
                            <h5 class="name line-ellipsis"><%= data[i].nm %> </h5>
                        </a>
                    </div>
                    <%} %>
        
                </div>
            </div>

            <div class="list-wrap">
                <% for(let i=0;i<data.length;i++){%>
                    <div class="item" data-id="1281095" data-bid="dp_wx_home_movie_list">
                        <div class="main-block">
                            <div class="avatar" sort-flag="">
            
                                <div class="default-img-bg">
                                    <img src="https://p0.meituan.net/128.180/movie/${data[i].img.split('/').pop()}"
                                        onerror="this.style.visibility='hidden'">
                                </div>
                            </div>
                            <div class="mb-outline-b content-wrapper">
            
            
                                <div class="column content">
                                    <div class="box-flex movie-title">
                                        <div class="title line-ellipsis "><%= data[i].nm  %> </div>
            
            
                                    </div>
            
                                    <div class="detail column">
            
            
                                        <div class="score line-ellipsis">
                                            <span class="score-suffix">观众评 </span>
                                            <span class="grade"><%= data[i].sc  %> </span>
                                        </div>
            
            
            
            
                                        <div class="actor line-ellipsis">主演:<%= data[i].star %> </div>
            
            
            
            
            
                                        <div class="show-info line-ellipsis"><%= data[i].showInfo %> </div>
            
                                    </div>
                                </div>
            
                                <div class="button-block" data-id="1281095">
            
                                    <div class="btn normal"><span class="fix" data-bid="dp_wx_home_movie_btn">购票</span></div>
            
                                </div>
            
                            </div>
                        </div>
                    </div>            
                <%} %> 
        
            </div>
        </section>
    </section>





</div>